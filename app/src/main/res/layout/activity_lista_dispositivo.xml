<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mundobabushka.magnus.bambushka_pov.ListaDispositivo">

    <TextView
        android:id="@+id/text_listadispositivo"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:text="@string/DispositivosPareados"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_listadispositivo"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ListarDispositivos"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/text_listadispositivo" />

    <ListView
        android:id="@+id/listview_listadispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/button_listadispositivo" />

</android.support.constraint.ConstraintLayout>
